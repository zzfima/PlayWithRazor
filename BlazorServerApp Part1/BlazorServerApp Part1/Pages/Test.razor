@page "/test"
@page "/sample"

<h3>Test</h3>

@* call function *@
<h3>@getCounter()</h3>

@* using event handler *@
<button class="btn btn-primary" @onclick="removeOne">Remove 1</button>

@* using lambda function *@
<button class="btn btn-primary" @onclick=@(()=>i++)>Add 1</button>

@* using inline calculations *@
<h3>Counter * 2: @(2 * i)</h3>

<h3>Parity: @parity</h3>

@* using conditions *@
@if (i % 2 == 0)
    parity = "even";
else
    parity = "odd";

@code {
    private string parity = string.Empty;
    private int i = 44;
    private void removeOne() => i--;
    private string getCounter() => $"counter = {i}";
}
